<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.esprit.gui.back.AttendeeDialogController">
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
    <content>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Name:" />
            <TextField fx:id="nameField" promptText="Attendee Name" />
            
            <Label text="Phone Number:" />
            <TextField fx:id="phoneField" promptText="Phone Number" />
            
            <Label text="Email:" />
            <TextField fx:id="emailField" promptText="Email Address" />
        </VBox>
    </content>
</DialogPane>
